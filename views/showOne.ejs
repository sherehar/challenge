<%- include('./components/header')  %>

        <% if (tweet){ %>
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-8">
                            <div class="card-body">
                                <h3 class="card-title"><%= tweet.title %></h3>
                                <p class="card-text"><%= tweet.tweet %></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <p class="card-text"><small class="text-muted"><%= tweet.updatedAt.getDate() %>/<%= tweet.updatedAt.getMonth() %>/<%= tweet.updatedAt.getFullYear() %></small></small></p>
                        </div>
                        
                    </div>
                </div>
                <a href="/tweet/edit/<%= tweet._id %>" class="btn btn-outline-primary">Edit</a>
                <a href="/delete-tweet/<%= tweet._id %>" class="btn btn-outline-danger">Delete</a>
        <% } else { %>
            <h2>There is <%= tweet%> Tweet</h2>
        <% } %>
        
<%- include('./components/footer') %>