
<%- include('./components/header') %>
    
        <% if (tweets.length){ %>
            <h2>There are <%= tweets.length%> Tweets</h2>
            <% tweets.forEach((tweet) => { %>
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-8">
                            <div class="card-body">
                                <h3 class="card-title"><%= tweet.title %></h3>
                                <p class="card-text"><%= tweet.tweet.substr(0,40) %></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <p class="card-text"><small class="text-muted"><%= tweet.updatedAt.getDate() %>/<%= tweet.updatedAt.getMonth() %>/<%= tweet.updatedAt.getFullYear() %></small></small></p>
                            <a href="/tweet/<%= tweet.id %>" class="card-link">See More</a>
                        </div>
                    </div>
                </div>
                
            <% }) %>
        <% } else { %>
            <h2>There is <%= tweets.length%> Tweet</h2>
        <% } %>
<%- include('./components/footer') %>